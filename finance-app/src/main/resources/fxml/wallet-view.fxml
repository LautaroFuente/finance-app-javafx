<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<VBox alignment="CENTER" prefHeight="411.0" prefWidth="638.0" stylesheets="@/css/wallet.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.finance_app.finance_app.controller.WalletController">
   
   <children>
      <HBox alignment="TOP_RIGHT" prefHeight="26.0" prefWidth="638.0">
         <children>
            <StackPane fx:id="notificationStack" alignment="BOTTOM_LEFT" prefHeight="37.0" prefWidth="56.0">
               <children>
               	<ImageView fx:id="bellIcon" fitHeight="27.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" />
      			<Label fx:id="notificationCountLabel" text="0"
       style="-fx-background-color: red; -fx-text-fill: white; -fx-font-size: 10px; -fx-background-radius: 10px;"
       StackPane.alignment="TOP_RIGHT">
   <padding>
      <Insets top="2" right="2" bottom="2" left="2"/>
   </padding>
</Label>

               </children>
            </StackPane>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="0.0" prefWidth="638.0" VBox.vgrow="ALWAYS">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="300.0" layoutY="51.0" prefHeight="17.0" prefWidth="123.0" text="Mi billetera" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
      <Label fx:id="totalWallet" layoutX="300.0" layoutY="51.0" prefHeight="31.0" prefWidth="84.0">
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin></Label>
      <HBox alignment="CENTER" prefHeight="58.0" prefWidth="638.0">
         <children>
            <TableView fx:id="transactionList" prefHeight="147.0" prefWidth="377.0">
              <columns>
                <TableColumn fx:id="transactionType" prefWidth="75.0" text="Tipo" />
                <TableColumn fx:id="transactionAmount" prefWidth="75.0" text="Monto" />
                <TableColumn fx:id="transactionCategory" prefWidth="75.0" text="Categoria" />
                <TableColumn fx:id="transactionDate" prefWidth="75.0" text="Fecha" />
              </columns>
            </TableView>
            <StackPane prefHeight="150.0" prefWidth="200.0">
               <children>
                  <PieChart fx:id="chart" prefHeight="150.0" prefWidth="162.0" />
                  <Circle fx:id="hole" fill="white" radius="25.0" />
               </children>
            </StackPane>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="446.0" prefWidth="638.0" spacing="30.0">
         <children>
            <Button fx:id="buttonAddTransaction" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#goToAddTransaction" text="Agregar transaccion" />
            <Button fx:id="buttonAsignLimit" mnemonicParsing="false" onAction="#goToAsignationLimit" text="Asignar limite" />
            <Button fx:id="buttonNotifications" mnemonicParsing="false" onAction="#goToNotifications" text="Notificaciones" />
            <Button fx:id="closeSession" mnemonicParsing="false" onAction="#closeMySession" text="Cerrar sesion" />
         </children>
      </HBox>
   </children>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER"
      prefHeight="411.0"
      prefWidth="638.0"
      spacing="25"
      stylesheets="@/css/notification.css"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.finance_app.finance_app.controller.NotificationController">

    <children>

        <!-- Titulo -->
        <Label text="Mis notificaciones" styleClass="title-label">
            <VBox.margin>
                <Insets top="15" bottom="5" />
            </VBox.margin>
        </Label>

        <!-- Lista -->
        <ListView fx:id="notificationList"
                  prefHeight="260"
                  prefWidth="520"
                  styleClass="card-list" />

        <!-- Mensaje de estado -->
        <Label fx:id="messageAboutList"
               text=""
               styleClass="status-label" />

        <!-- Botón volver -->
        <HBox alignment="CENTER_RIGHT" prefWidth="600">
            <children>
                <Button fx:id="buttonBack"
                        text="Atrás"
                        onAction="#goBack"
                        styleClass="secondary-button">
                    <HBox.margin>
                        <Insets right="20" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>

    </children>
</VBox>
